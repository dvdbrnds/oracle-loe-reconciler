# =============================================================================
# Vendor Hours Tracker - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# SQLite database file path (relative to server directory)
DATABASE_PATH=./db/vendor_hours.db

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Secret key for JWT signing (generate a secure random string)
JWT_SECRET=change-this-to-a-secure-random-string-in-production
# Session duration in hours
SESSION_DURATION_HOURS=24

# -----------------------------------------------------------------------------
# Jira Integration
# -----------------------------------------------------------------------------
# Set to 'true' to use mock data instead of live Jira
USE_MOCK_DATA=true

# Jira Cloud instance URL (without trailing slash)
JIRA_INSTANCE_URL=https://drivestream.atlassian.net

# Jira API credentials (email and API token)
# Generate API token at: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_API_EMAIL=
JIRA_API_TOKEN=

# Jira projects to sync (comma-separated)
JIRA_PROJECTS=MOHEECI,MOCSO,MOCS,MOPT,MSPP

# Sync interval in minutes
JIRA_SYNC_INTERVAL_MINUTES=15

# -----------------------------------------------------------------------------
# Budget Configuration
# -----------------------------------------------------------------------------
# Default monthly hour allocation
DEFAULT_MONTHLY_HOURS=100

# -----------------------------------------------------------------------------
# Notifications (Optional)
# -----------------------------------------------------------------------------
# Google Chat webhook URL
GOOGLE_CHAT_WEBHOOK_URL=

# Slack webhook URL
SLACK_WEBHOOK_URL=

# Microsoft Teams webhook URL
TEAMS_WEBHOOK_URL=

# Email configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# -----------------------------------------------------------------------------
# SAML/Okta Authentication
# -----------------------------------------------------------------------------
# Enable SAML SSO
SAML_ENABLED=true

# Okta SAML Entry Point (SSO URL from Okta)
SAML_ENTRY_POINT=https://your-domain.okta.com/app/your-app-id/sso/saml

# Okta Issuer (Entity ID from Okta metadata)
SAML_ISSUER=http://www.okta.com/your-app-id

# Callback URL (must match Okta ACS URL configuration)
SAML_CALLBACK_URL=https://your-app-domain.com/api/auth/saml/callback

# Okta X.509 Certificate (from Okta SAML setup)
# Note: This is a multi-line value - paste the full certificate
SAML_CERT=

# Session secret for express-session (required for SAML)
SESSION_SECRET=change-this-to-a-secure-random-string
